<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="edu.auburn.oaccrefac.ui.actionSet"
            label="OpenACC Refactoring"
            visible="true">
         <menu
               id="oaccrefac_menu"
               label="OpenAcc &amp;Refactoring">
            <separator
                  name="oaccrefac_group">
            </separator>
         </menu>
         <action
               class="edu.auburn.oaccrefac.internal.ui.actions.IntroOpenACCParallelDelegate"
               id="edu.auburn.oaccrefac.internal.ui.actions.IntroOpenACCParallelDelegate"
               label="&amp;Simple Pragma"
               menubarPath="oaccrefac_menu/oaccrefac_group"
               toolbarPath="oaccrefac_group"
               tooltip="Adds a simple parallel pragma before a for-loop">
         </action>
         <action
               class="edu.auburn.oaccrefac.internal.ui.actions.LoopUnrollingDelegate"
               id="edu.auburn.oaccrefac.internal.ui.actions.LoopUnrollingDelegate"
               label="&amp;Unrolling"
               menubarPath="oaccrefac_menu/oaccrefac_group"
               toolbarPath="oaccrefac_group"
               tooltip="Unrolls a selected for-loop for efficiency">
         </action>
         <action
               class="edu.auburn.oaccrefac.internal.ui.actions.LoopInterchangeDelegate"
               id="edu.auburn.oaccrefac.internal.ui.actions.LoopInterchangeDelegate"
               label="&amp;Interchange"
               menubarPath="oaccrefac_menu/oaccrefac_group"
               toolbarPath="oaccrefac_group"
               tooltip="Interchanges two nested loop headers">
         </action>
         <action
               class="edu.auburn.oaccrefac.internal.ui.actions.LoopFusionDelegate"
               id="edu.auburn.oaccrefac.internal.ui.actions.LoopFusionDelegate"
               label="&amp;Fusion"
               menubarPath="oaccrefac_menu/oaccrefac_group"
               toolbarPath="oaccrefac_group"
               tooltip="Defuse two for-loop together when possible.">
         </action>
      </actionSet>
   </extension>

</plugin>
